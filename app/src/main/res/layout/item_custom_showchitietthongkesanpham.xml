<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/item_chiTietThongKeSanPham_llout_xepHangSanPhamColor"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/broder_stroke_cam"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/item_chiTietThongKeSanPham_tv_xepHangSanPham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#E74C3C"
            android:text="1"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_chiTietThongKeSanPham_tv_tenSanPham"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Phim cà phê"
        android:textColor="@color/black"
        android:textSize="11sp"

        android:textStyle="bold|normal"
        app:layout_constraintBottom_toBottomOf="@+id/item_chiTietThongKeSanPham_llout_xepHangSanPhamColor"
        app:layout_constraintStart_toEndOf="@+id/item_chiTietThongKeSanPham_llout_xepHangSanPhamColor"
        app:layout_constraintTop_toTopOf="@+id/item_chiTietThongKeSanPham_llout_xepHangSanPhamColor" />

    <TextView
        android:id="@+id/item_chiTietThongKeSanPham_tv_soLuongSanPham"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="SL: 12"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_chiTietThongKeSanPham_tv_tenSanPham"
        app:layout_constraintStart_toEndOf="@+id/item_chiTietThongKeSanPham_tv_tenSanPham"
        app:layout_constraintTop_toTopOf="@+id/item_chiTietThongKeSanPham_tv_tenSanPham" />

    <TextView
        android:id="@+id/item_chiTietThongKeSanPham_tv_tongSoTienBanDuoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123.000đ"
        android:textStyle="bold|normal"
        android:textColor="@color/lf_orange"
        android:layout_marginRight="20dp"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>