                            android:background="@drawable/broder_stroke_cam"
                            android:hint="Số điện thoại"
                            android:textSize="12sp"
                            android:maxLines="1"
                            android:padding="10dp" />
                    </com.google.android.material.textfield.TextInputLayout>


