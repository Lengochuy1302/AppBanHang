<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/itemQuanLyKho_llout_btnInfo"
            android:layout_width="match_parent"
            android:layout_marginRight="30dp"
            app:cardElevation="3dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_height="match_parent">
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/lf_orange" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/itemQuanLyThanhVien_tv_tenNguoiDung"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:text="Name: Vũ Hiếu Trung"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/item_custom_soDienThoai"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:text="SĐT:"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginTop="-20dp"
                            android:layout_marginLeft="35dp"
                            android:text="09634534147"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/item_custom_dichia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:text="Địa Chỉ:"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-16dp"
                            android:layout_marginLeft="50dp"

                            android:layout_gravity="center|start"
                            android:text="305 Hà Huy Tập, Phường  Tân Lợi,
                             Thành Phố BMT"
                            android:textColor="#4E4E4E"
                            android:textSize="10sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />




                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/black" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="center|start"
                    android:paddingLeft="5dp"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/itemQuanLyThanhVien_tv_trangThai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/lf_gray"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="26dp"
                        android:textSize="10dp"
                        android:text="Date: 12/10/2021" />

                    <TextView
                        android:id="@+id/itemQuanLyThanhVien_tv_quyenNguoiDung"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/lf_green"
                        android:layout_marginLeft="18dp"

                        android:textSize="10dp"
                        android:text="Đang sử lí đơn hàng" />
                    <TextView
                        android:id="@+id/itemQuanLyThanhVien_tv_soDonDaDat"
                        android:textColor="@color/lf_orange"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="đ200.000" />

                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</FrameLayout>